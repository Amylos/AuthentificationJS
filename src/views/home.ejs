<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Auth</title>
</head>
<body>
    <%- include('partials/header.ejs') %>
    <div id="home-container">
        <h1>Welcome to Home</h1>
        <div class="button-group">
            <button id="TestTokenBtn" class="primary-btn">Test Token</button>
            <a href="/admin">Test admin route</a>
        </div>
    </div>
    <%- include('partials/footer.ejs') %>
</body>
</html>

<script>

    const tokenBtn = document.getElementById("TestTokenBtn");
    tokenBtn.addEventListener('click', (event)=>{
        console.log('click token test');
        event.preventDefault();

        fetch('http://localhost:3000/api/auth/token', {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json'
            },
            credentials: "include"
        })
        .then(response => response.json())
        .then(data => {
            console.log(data);
        })
        .catch(error => console.error("Error:", error));
    })


</script>

